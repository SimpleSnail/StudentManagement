@model IEnumerable<Student>
@{
    ViewBag.Title = "学生列表页面";
}


<div class="card-deck">
    @foreach (var student in Model)
    {
        var photoPath = "~/images/" + (student.PhotoPath ?? "noimage.png");
        <div class="card m-3">
            <div class="card-header">
                <h3>@student.Name</h3>
            </div>
            <div class="card-body">
                <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
                <!-- 其他内容放在这里 -->
            </div>
            <div class="card-footer text-center">
                <a href="/home/details/@student.Id" class="btn btn-primary m-2">查看</a>
                <a href="#" class="btn btn-primary m-2">编辑</a>
                <a href="#" class="btn btn-danger" m-2>删除</a>
            </div>
        </div>
    }
</div>
